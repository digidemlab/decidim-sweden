<section id="hero-<%= model.id %>" class="hero__container" style="--hero-image:url('<%= background_image %>')" data-process-hero>
  <div class="hero relative">

    <div class="absolute inset-0 flex items-center p-4 md:p-8 lg:p-12">
      <div class="hero__card bg-white rounded-sm p-6 md:p-8 w-full md:w-2/3 lg:w-1/2 xl:w-2/5">
        <h1 class="hero__title">
          <% if translated_welcome_text.blank? %>
            <%= t("decidim.pages.home.hero.welcome", organization: current_organization_name) %>
          <% else %>
            <%= decidim_sanitize_admin translated_welcome_text %>
          <% end %>
        </h1>
        <%= render :cta_button %>
      </div>
    </div>
  </div>
</section>
