<% if Rails.application.secrets.dig(:sentry, :enabled) %>
  <script
  src="https://browser.sentry-cdn.com/6.19.3/bundle.min.js"
  integrity="sha384-nPdevhdd3kzoE6qSkQOcxINaeJgCo/0OZ+Q8WV3rnT3Z95tbfSmkVRlYbDV6iKpl"
  crossorigin="anonymous"
></script>
  <script>
    Sentry.init({
      dsn: '<%= Rails.application.secrets.dig(:sentry, :dsn).gsub(/^https:\/\/([^:]+):[^@]+(.*)/, 'https://\1\2') %>'
    });
  </script>
<% end %>
